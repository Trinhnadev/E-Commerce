   {% extends 'base.html.twig' %}
{% block title %}Your Bill{% endblock %}
{% block body %}

    <style>
      
        
        article{
            
            width : 800px;
            padding-top: 30px;
            margin: auto;
            background-color: #fff;
            height: auto;
            
        }
       article h1{
        text-align: center;
       }
       
        
       
        
    </style>
   <article >
            {# <h1>Successful</h1> #}
            <hr>
            {% for d in date %}
                <p>Date :{{d.Date|date('d/m/Y H:i')}}</p>
            {% endfor %}
            
            <p>Order's ID :{{oid}}</p>

             <div class="infor ">
             {% for u in userinfo %}
            <p  style ="margin-top:30px;"> Name:  {{u.Name}}</p>
            <p style ="margin-top:30px"> Phone: {{u.Phone}}</p>
            <p  style ="margin-top:30px; margin-bottom:30px">Address: {{u.Address}}</p>
             {% endfor %}
             </div>
            <hr>
            <div class="bill">
                <table class="table">
                <tr> 
                <th>Item</th>
                <th >Quantity</th>
                <th>Price</th>
                <th>Total</th>
                         
                </tr>
                {% for p in productdetail %}
                 <tr> 
                  
                 <td>{{p.namepro}}</td> 
                <td> 
                <p >{{p.Quantity}} </p>
                {# <input id="form1" style ="background-color:#FFCC99" min="0" name="quantity" value="{{p.Quantity}}" type="number" class="form-control form-control-sm" /> #}
                </td> 
                <td><p>${{p.price}}</p></td>
                <td>
                
                <h6 class="mb-0"><span>${{sum(p.Quantity,p.price)}}</span> </h6>
                </td>
                 </tr>
                 {% endfor %}
                                      
                 <tr>
                <td colspan="3">Total</td>
                   {% for t in total %}
                    <td>${{t.Total}}</td>
                   {% endfor %}                    
                
                </tr>
                                              
                </table> 
                
                </div>
            </div>
            <h6 class="my-5"><a href="{{path('app_test')}}" class="text-body">Back to shop <i class="bi bi-box-arrow-left me-2"></i></a></h6> 

        </article>

        
{% endblock %}
