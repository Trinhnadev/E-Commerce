{% extends 'base.html.twig' %}

{% block body %}
    <h1>Product List</h1>
    <button ><a href ="{{path('addproduct')}}">Add Product</a></button>
    <table class="table">
        <thead>
            <tr>
                <th>No.</th>
                <th>ID Product</th>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
         {% for p in pro %}
            <tr>
                <td>{{ p.id }}</td>
                <td>{{ p.idpro }}</td>
                <td>{{ p.namepro }}</td>
                <td>{{ p.price}}</td>
                <td>
                    <a href="{{ path('edit', { 'id': p.id }) }}">Edit</a>
                    
                </td>
                 <td>
                    <a href="{{ path('product_delete', { 'id': p.id }) }}">Delete</a>
                    
                </td>
               
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
